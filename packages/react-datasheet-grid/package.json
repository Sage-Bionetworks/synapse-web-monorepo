{
  "name": "@sage-bionetworks/react-datasheet-grid",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Sage-Bionetworks/synapse-web-monorepo/packages/react-datasheet-grid"
  },
  "version": "4.11.5-sage.3",
  "nx": {
    "targets": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "{projectRoot}/dist"
        ]
      }
    }
  },
  "description": "An Excel-like React component to create beautiful spreadsheets.",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": [
    "src/style.css",
    "**/*.css"
  ],
  "lint-staged": {
    "*.{ts,tsx}": [
      "bash -c 'FILES=$(echo \"$@\" | tr \" \" \"\\n\" | grep -v \"\\.test\\.\" | grep -v \"/tests/\" | tr \"\\n\" \" \"); [ -n \"$FILES\" ] && pnpm eslint --fix $FILES || true' _",
      "prettier --write"
    ]
  },
  "scripts": {
    "build": "vite build",
    "start": "vite preview",
    "format": "prettier --write src/. && prettier --write example/src/.",
    "lint": "eslint src/.",
    "test": "vitest run"
  },
  "keywords": [
    "react",
    "reactjs",
    "spreadsheet",
    "grid",
    "datasheet",
    "excel",
    "airtable",
    "notion",
    "table"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./dist/style.css": "./dist/style.css",
    "./style.css": "./dist/style.css"
  },
  "author": "Nicolas Keller (https://github.com/nick-keller)",
  "type": "module",
  "license": "MIT",
  "homepage": "https://react-datasheet-grid.netlify.app/",
  "devDependencies": {
    "@jest/types": "^27.4.2",
    "@testing-library/jest-dom": "^5.15.1",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jsdom": "^16.2.13",
    "@types/react": "18.0.38",
    "@types/throttle-debounce": "^2.1.0",
    "@vitejs/plugin-react": "^5.1.3",
    "@vitest/ui": "^4.0.18",
    "concurrently": "^6.2.0",
    "cpx": "^1.5.0",
    "jsdom": "^16.6.0",
    "prettier": "^2.3.1",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "resize-observer-polyfill": "^1.5.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "5.8.3",
    "vite": "^7.3.1",
    "vite-config": "workspace:*",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-react": "^4.0.1",
    "vitest": "^4.0.18"
  },
  "files": [
    "dist/**/*"
  ],
  "peerDependencies": {
    "react": "^15.0.0 || ^16.0.0 || ^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@tanstack/react-virtual": "^3.0.0-beta.18",
    "classnames": "^2.3.1",
    "fast-deep-equal": "^3.1.3",
    "react-resize-detector": "^10.0.1",
    "throttle-debounce": "^3.0.1",
    "tslib": "^2.8.1"
  }
}
