{
  "name": "@sage-bionetworks/aridhia-client",
  "version": "0.0.1",
  "description": "Aridhia FAIR API Client",
  "type": "module",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./generated/runtime": {
      "types": "./dist/generated/runtime.d.ts",
      "default": "./dist/generated/runtime.js"
    },
    "./generated/models": {
      "types": "./dist/generated/models/index.d.ts",
      "default": "./dist/generated/models/index.js"
    },
    "./generated/apis": {
      "types": "./dist/generated/apis/index.d.ts",
      "default": "./dist/generated/apis/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "default": "./dist/*.js"
    }
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.24.0",
    "@types/lodash-es": "^4.17.12",
    "@vitest/ui": "^4.0.18",
    "lodash-es": "^4.17.21",
    "msw": "^2.10.2",
    "rimraf": "^5.0.10",
    "tslib": "^2.8.1",
    "tsx": "^4.19.4",
    "typescript": "5.8.3",
    "undici": "^6.21.2",
    "vite": "^6.3.5",
    "vite-config": "workspace:*",
    "vitest": "^4.0.18"
  },
  "scripts": {
    "clean": "rimraf ./dist && rimraf *.tsbuildinfo",
    "format-spec": "prettier --write src/spec/fair-api.json",
    "generate": "rimraf src/generated && openapi-generator-cli generate -i src/spec/fair-api.json -c config.json -o src/generated",
    "build": "pnpm tsc --build",
    "test": "vitest",
    "lint": "eslint src"
  },
  "nx": {
    "targets": {
      "generate": {
        "inputs": [
          "{projectRoot}/src/spec/fair-api.json",
          "{projectRoot}/package.json",
          "{projectRoot}/openapitools.json",
          "{projectRoot}/config.json"
        ],
        "outputs": [
          "{projectRoot}/src/generated"
        ]
      },
      "test": {
        "dependsOn": [
          "generate"
        ]
      },
      "build": {
        "dependsOn": [
          "generate"
        ]
      }
    }
  },
  "keywords": [],
  "author": "",
  "license": "Apache-2.0"
}
