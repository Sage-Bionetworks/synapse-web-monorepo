{
  "extends": "../../shared/tsconfig.base.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist/types",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "Node",
    "allowJs": false,
    "noEmit": true,
    "isolatedModules": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", ".storybook/**/*"]
}
