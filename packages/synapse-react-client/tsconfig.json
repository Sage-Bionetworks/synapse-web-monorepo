{
  "extends": "../../shared/tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src/lib",
    "outDir": "dist",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "Node",
    "allowJs": false,
    "noEmit": false,
    "isolatedModules": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "include": ["src/lib/**/*.ts", "src/lib/**/*.tsx"]
}
