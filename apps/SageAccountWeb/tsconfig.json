{
  "extends": "../../shared/tsconfig.base.json",
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": "src",
    "moduleResolution": "NodeNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noFallthroughCasesInSwitch": true,
    "useUnknownInCatchVariables": false
  },
  "include": ["src"]
}
